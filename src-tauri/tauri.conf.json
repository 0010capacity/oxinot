{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Oxinot",
  "version": "0.20.0",
  "identifier": "com.oxinot.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/0010capacity/oxinot/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM5QkZFNjAzNkM4M0Y3QTIKUldTaTk0TnNBK2EvT2VaVkVrRVVidlk5YjJ2dW9HQUNWZWhFWGpMZzRrV2JoK1VIa0EwdjJ1N3QK"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Oxinot",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 20,
          "y": 22
        },
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https: data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' https://www.googletagmanager.com; connect-src 'self' https://github.com https://firebase.googleapis.com https://firebaseinstallations.googleapis.com https://www.googletagmanager.com ipc://* tauri://; font-src 'self' data: https://fonts.gstatic.com;"
    },
    "withGlobalTauri": false
  }
}
