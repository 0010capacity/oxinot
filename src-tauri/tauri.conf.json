{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Oxinot",
  "version": "0.1.0",
  "identifier": "com.oxinot.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null
    }
  },
  "app": {
    "windows": [
      {
        "title": "Oxinot",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 20,
          "y": 22
        }
      }
    ],
    "security": {
      "csp": null
    }
  }
}
